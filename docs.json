            "group": "Platform Basics",
            "pages": [
              "platform/overview",
              "platform/navigation",
              "platform/workflows"
            ]
          },
          {
            "group": "Customizing BrandRadar",
            "pages": [
              "customization/settings",
              "customization/notifications",
              "customization/team"
            ]
          }
        ]
      },
      {
        "tab": "Analytics",
        "groups": [
          {
            "group": "Core Metrics",
            "pages": [
              "analytics/visibility-score",
              "analytics/sentiment-score",
              "analytics/prompt-score"
            ]
          },
          {
            "group": "Tracking & Reports",
            "pages": [
              "analytics/brand-comparison",
              "analytics/historical-trends",
